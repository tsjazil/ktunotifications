#!/bin/bash
for apps in dmenu jq zathura notify-send; do
	[ ! "$(which "$apps")" ] && echo "Please install $apps!" && exit 1
done

 id=$(curl http://ktu.amith.ninja/ |jq '.' |jq -r '.notifications[]| "\(.title)  \(.links[].url)"'| fzf --with-nth='1..-2' +m | awk '{print $NF}' )
[ -z "$id" ]  && exit 1
wget -O /tmp/ktu-notification.pdf "$id"
notify-send "ðŸ“¥ Opening Notification"
zathura /tmp/ktu-notification.pdf
